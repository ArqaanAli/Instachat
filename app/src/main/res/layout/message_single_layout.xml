<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:id="@+id/message_single_layout">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_profile_layout"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/cwisdefaultavatar"
        />

    <TextView
        android:id="@+id/message_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/message_profile_layout"
        android:background="@drawable/message_text_background"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:text="Message"
        android:textSize="15dp"
        android:textColor="@color/white" />



</RelativeLayout>